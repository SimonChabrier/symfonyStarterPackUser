{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class = "container">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

{% if app.user %}
    {# put here what you want to display or do if the user is already logged in #}
    <h1>Vous êtes déjà connecté {{ app.user.username }}</h1>
    <a class="btn btn-primary" href="{{ path('app_home') }}" role="button">Retourner à l'accueil</a> 
{% else %}

    <h1>Enregistrement</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.Conditions) }}
        <button class="btn btn-lg btn-primary" type="submit">Valider</button>
    {{ form_end(registrationForm) }}
</div>    

{% endif %}
{% endblock %}
